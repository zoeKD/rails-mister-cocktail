<%= simple_form_for(cocktail) do |f| %>
  <%= f.input :name, label: false, placeholder: "Your delicious cocktail's name" %>
  <%= f.input :photo, label: false %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :url, label: false, placeholder: "Or enter a picture url"%>
  <%= f.submit class: "btn btn-primary btn-block" %>
<% end %>
